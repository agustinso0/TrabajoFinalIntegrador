{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend Node.js/Express con TypeScript y MongoDB",
  "main": "src/index.ts",
  "scripts": {
    "dev": "vite-node --tsconfig ./tsconfig.json src/index.ts",
    "build": "vite build --config vite.server.config.ts",
    "start": "node dist/index.js",
    "migrate": "node --loader ts-node/esm src/database/migrate.ts",
    "migrate:seed": "npm run migrate seed",
    "migrate:clean": "npm run migrate clean",
    "migrate:reset": "npm run migrate reset",
    "test": "jest",
    "test:e2e": "jest src/__tests__/api.e2e.test.ts --runInBand",
    "test:watch": "jest --watch",
    "postinstall": "tsc --init"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mercadopago": "^2.0.8",
    "mongoose": "^8.3.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "5.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.12",
    "@types/swagger-jsdoc": "^6.0.4",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.3.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^7.3.0",
    "vite-node": "^5.2.0",
    "vite-tsconfig-paths": "^6.0.3"
  }
}
